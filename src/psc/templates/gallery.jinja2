{% extends "layout.jinja2" %}
{% block main %}
    <section class="hero is-small is-dark">
        <div class="hero-body">
            <p class="title">
                PyScript Gallery
            </p>
            <p class="subtitle">
                Curated examples, runnable from this website or locally installable.
            </p>
        </div>
    </section>
    <main id="main_container" class="container">
        <div class="tile is-ancestor">
            {% for example in examples %}
                <div class="tile is-parent is-4">
                    <article class="tile is-child box">
                        <p class="title"><a
                                href="{{ root_path }}/gallery/examples/{{ example.path.name }}/">{{ example.title }}</a>
                        </p>
                        <p class="subtitle">{{ example.subtitle }}</p>
                        <div class="content">
                            {{ example.description | safe }}
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
